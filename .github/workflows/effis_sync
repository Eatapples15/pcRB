name: EFFIS Fire Sync

on:
  workflow_dispatch: # Avvio manuale
  schedule:
    - cron: '0 */3 * * *' # Ogni 3 ore

permissions:
  contents: write

jobs:
  sync-effis:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'

      - name: Install dependencies
        run: pip install requests

      - name: Run EFFIS Script
        run: python effis_extractor.py

      - name: Commit and Push
        run: |
          git config --global user.name "EFFIS-Bot"
          git config --global user.email "bot@pcbasilicata.it"
          git add effis_incendi_attivi.geojson
          git commit -m "Aggiornamento incendi attivi $(date +'%d/%m/%Y %H:%M')" || echo "Nessun nuovo incendio"
          git push
